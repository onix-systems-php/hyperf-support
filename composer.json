{
  "name": "onix-systems-php/hyperf-support",
  "type": "extension",
  "keywords": [
    "php",
    "hyperf",
    "support",
    "trello",
    "slack"
  ],
  "description": "Support module for Hyperf web applications",
  "extra": {
    "hyperf": {
      "config": "OnixSystemsPHP\\HyperfSupport\\ConfigProvider"
    }
  },
  "autoload": {
    "psr-4": {
      "OnixSystemsPHP\\HyperfSupport\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Ihor Rud",
      "email": "ihor.rud@onix-systems.com"
    },
    {
      "name": "Volodymyr Karchevskyi",
      "email": "volodymyr.karchevskyi@onix-systems.com"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^10.5.45",
    "symfony/var-dumper": "^7.2.3",
    "phpstan/phpstan": "^2.1.8",
    "friendsofphp/php-cs-fixer": "^3.71"
  },
  "require": {
    "php": ">=8.1",
    "hyperf/framework": "^3.1.42",
    "onix-systems-php/hyperf-core": ">=1.2.2",
    "hyperf/di": ">=3.1.52",
    "onix-systems-php/hyperf-actions-log": "^1.2.1",
    "hyperf/guzzle": "^3.1.42",
    "friendsofhyperf/helpers": "^3.1.57",
    "onix-systems-php/hyperf-file-upload": "^1.3",
    "zircote/swagger-php": "^4.11.1"
  }
}
